{
    "manifest_version": 3,
    "name": "Email Alias Generator Aug24",
    "version": "1.0",
    "description": "Generate email aliases on-the-fly based on the current website.",
    "permissions": [
      "activeTab",
      "storage",
      "contextMenus",
      "clipboardWrite"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "action": {
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      },
      "default_title": "Generate Email Alias"
    },
    "background": {
      "service_worker": "src/background/background.js",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["src/content/content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["src/history/history.html"],
        "matches": ["<all_urls>"]
      }
    ],
    "options_page": "src/options/options.html"
  }